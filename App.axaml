<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SubjectHelper.App"
             xmlns:local="using:SubjectHelper"
             xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             xmlns:semi="https://irihi.tech/semi"
             RequestedThemeVariant="Dark">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
             
    <Application.Resources>
        <FontFamily x:Key="FaBrands">/Assets/Fonts/Brands.otf#Font Awesome 6 Brands</FontFamily>
        <FontFamily x:Key="FaRegular">/Assets/Fonts/Regular.otf#Font Awesome 6 Regular</FontFamily>
        <FontFamily x:Key="FaSolid">/Assets/Fonts/Solid.otf#Font Awesome 6 Regular</FontFamily>
    </Application.Resources>
  
    <Application.Styles>
        <semi:SemiTheme Locale="en-US"/>
        <semi:SemiPopupAnimations />
        <dialogHostAvalonia:DialogHostStyles/>
        <StyleInclude Source="Components/EvaluationCard.axaml"/>
        <StyleInclude Source="Components/EvaluationForm.axaml"/>
        <StyleInclude Source="Styles/Icons.axaml"/>
        <StyleInclude Source="Styles/Colors.axaml"/>
        
        
        <!-- <FluentTheme/> -->
        
    </Application.Styles>
</Application>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:evaluationForm="clr-namespace:SubjectHelper.Components.EvaluationForm"
             xmlns:u="https://irihi.tech/ursa"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SubjectHelper.Components.EvaluationForm.EvaluationFormView"
             x:DataType="evaluationForm:EvaluationFormViewModel"
             Width="512"
             Loaded="Control_OnLoaded">
    
    <UserControl.KeyBindings>
        <KeyBinding Gesture="Escape" Command="{Binding CancelEvaluationCommand}"/>
    </UserControl.KeyBindings>
    
    <Grid RowDefinitions="Auto, *, Auto"
          Margin="24">
        
        <TextBlock Grid.Row="0"
                   Text="Evaluation"
                   VerticalAlignment="Bottom"
                   FontSize="20"/>
        
        <u:Form Grid.Row="1"
                Margin="0 20 0 0"
                HorizontalAlignment="Stretch"
                LabelPosition="Top">
            
            <u:Form.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </u:Form.ItemsPanel>
            
            <u:FormItem Label="Title">
                <TextBox
                    x:Name="EvaluationTitleInput"
                    KeyDown="EvaluationTitleInput_OnKeyDown"
                    u:FormItem.Label="Title"
                    u:FormItem.IsRequired="True"
                    MaxLength="20"
                    Text="{Binding Title, Mode=TwoWay}"/>
            </u:FormItem>
            
            <u:FormItem>
                <u:FormItem.Label>
                    <MultiBinding StringFormat="Weight - Maximum is {0}%">
                        <Binding Path="MaximumWeight"/>
                    </MultiBinding>
                </u:FormItem.Label>
                <NumericUpDown
                    x:Name="EvaluationWeightInput"
                    KeyDown="EvaluationWeightInput_OnKeyDown"
                    u:FormItem.Label="Weight"
                    u:FormItem.IsRequired="True"
                    Value="{Binding Weight, Mode=TwoWay}"
                    ShowButtonSpinner="False" />
            </u:FormItem>
            
            <u:FormItem Label="Grade">
                <NumericUpDown
                    x:Name="EvaluationGradeInput"
                    KeyDown="EvaluationGradeInput_OnKeyDown"
                    u:FormItem.Label="Grade"
                    u:FormItem.IsRequired="True"
                    Value="{Binding Grade, Mode=TwoWay}"
                    ShowButtonSpinner="False">
                    
                    <NumericUpDown.KeyBindings>
                        <KeyBinding Gesture="Enter" Command="{Binding SaveEvaluationCommand}"/>
                    </NumericUpDown.KeyBindings>
                    
                </NumericUpDown>
            </u:FormItem>
        </u:Form>
        
        <Grid Grid.Row="2"
              Margin="0 10 0 0"
              ColumnDefinitions="*, *"
              ColumnSpacing="25">
            
            <Button Grid.Column="0" 
                    Classes="Danger"
                    Theme="{DynamicResource SolidButton}"
                    HorizontalAlignment="Stretch"
                    Content="Cancel"
                    Command="{Binding CancelEvaluationCommand}"/>
            
            <Button Grid.Column="1"
                    Classes="Success"
                    Theme="{DynamicResource SolidButton}"
                    HorizontalAlignment="Stretch"
                    Content="Save"
                    Command="{Binding SaveEvaluationCommand}"/>
        </Grid>
    </Grid>
</UserControl>

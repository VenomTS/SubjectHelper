<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sectionComponent="clr-namespace:SubjectHelper.Components.ScheduleMakerComponents.SectionComponent"
             xmlns:subjectComponent="clr-namespace:SubjectHelper.Components.ScheduleMakerComponents.SubjectComponent"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SubjectHelper.Components.ScheduleMakerComponents.SubjectComponent.SubjectComponentView"
             x:DataType="subjectComponent:SubjectComponentViewModel">
    
    <Border>
        <Grid RowDefinitions="Auto, *">
            <Grid ColumnDefinitions="*, Auto">
                <TextBlock VerticalAlignment="Center" Text="{Binding Title}"/>
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="10">
                    <Button FontFamily="{StaticResource FaSolid}"
                            Theme="{DynamicResource BorderlessButton}"
                            VerticalAlignment="Center"
                            Content="&#xf055;"
                            Padding="0"
                            FontSize="16"
                            Command="{Binding AddSectionCommand}" />
                    <Button FontFamily="{StaticResource FaSolid}"
                            Theme="{DynamicResource BorderlessButton}"
                            VerticalAlignment="Center"
                            Content="&#xf044;"
                            Padding="0"
                            FontSize="16"
                            Command="{Binding EditCommand}"
                            CommandParameter="{Binding .}" />
                    <Button FontFamily="{StaticResource FaSolid}"
                            Theme="{DynamicResource BorderlessButton}"
                            Classes="Danger"
                            VerticalAlignment="Center"
                            Content="&#xf2ed;"
                            Padding="0"
                            FontSize="16"
                            Command="{Binding DeleteCommand}"
                            CommandParameter="{Binding .}" />
                </StackPanel>
            </Grid>
            <ItemsControl Grid.Row="1"
                          ItemsSource="{Binding Sections}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemSpacing="10" LineSpacing="20" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <sectionComponent:SectionComponentView/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
    
</UserControl>

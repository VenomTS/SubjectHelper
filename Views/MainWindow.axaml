<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SubjectHelper.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:components="clr-namespace:SubjectHelper.Components"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SubjectHelper.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="SubjectHelper"
        CanResize="False">
    
    <SplitView
        x:Name="SplitPane"
        IsPaneOpen="False"
        DisplayMode="CompactInline"
        CompactPaneLength="35"
        OpenPaneLength="200">
        
        <SplitView.Pane>
            <Grid Margin="5 20 0 0"
                  RowDefinitions="Auto, *">
                
                <Button Grid.Row="0"
                        FontFamily="{StaticResource FaSolid}"
                        Theme="{DynamicResource BorderlessButton}"
                        Content="&#xf0c9;" Click="UpdatePaneVisibility"
                        FontSize="24"
                        Margin="0 0 5 0"
                        Padding="0"
                        Foreground="White" HorizontalAlignment="Left" />
                
                <StackPanel Grid.Row="0"
                            Grid.RowSpan="2"
                            Orientation="Vertical"
                            VerticalAlignment="Center"
                            Margin="0 0 0 50">
                    
                    <components:SidePanelButton Text="Subjects" 
                                                FontAwesomeIcon="&#xf5da;" 
                                                IsTextVisible="{Binding $parent[SplitView].IsPaneOpen}"
                                                ClickCommand="{Binding GoToSubjectsCommand}"/>
                    
                    <components:SidePanelButton Text="Schedule Maker" 
                                                FontAwesomeIcon="&#xf017;" 
                                                IsTextVisible="{Binding $parent[SplitView].IsPaneOpen}"
                                                ClickCommand="{Binding GoToScheduleMakerCommand}"/>
                    
                </StackPanel>
            </Grid>
        </SplitView.Pane>
        
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </SplitView>

</Window>
